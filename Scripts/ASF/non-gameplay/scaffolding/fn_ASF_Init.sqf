//**************************************************//
//                   ASF Init                       //
//**************************************************//
// This file is the entry point for the framework.
// Most of the components are called below.
//**************************************************//


if (!ASF_InitComplete) then
{	
	//**************************************************//
	//                 Non-Gameplay                     //
	//**************************************************//

		
		
		
		
		//**************************************************//
		//                 Mission Data                     //
		//**************************************************//

			//**************************************************//
			//          		  Briefings                     //
			//**************************************************//

				briefings_addBlufor = [] spawn ASF_fnc_addBluforBriefing;
				briefings_addOpfor = [] spawn ASF_fnc_addOpforBriefing;
				
			//**************************************************//
			
			
			
			
			
			//**************************************************//
			//          	   Map Locations                    //
			//**************************************************//

				map_findLocations = [] spawn ASF_fnc_mapDataInit;
				
			//**************************************************//

		//**************************************************//




		
		//**************************************************//
		//                     Server                       //
		//**************************************************//

			//**************************************************//
			//                Garbage Collection                //
			//**************************************************//

				server_garbageCollection = [] spawn ASF_fnc_removeCorpses;
				
			//**************************************************//

		//**************************************************//

	//**************************************************//





	//**************************************************//
	//               	 Gameplay	                    //
	//**************************************************//

		//**************************************************//
		//                	    Camera                      //
		//**************************************************//

			//**************************************************//
			//          3RD Person View Restrictions            //
			//**************************************************//
			
				camera_3pv = [] spawn ASF_fnc_disableThirdPerson_Init;
				
			//**************************************************//

		//**************************************************//





		//**************************************************//
		//                     Player                       //
		//**************************************************//

			//**************************************************//
			//          	   Disable Fatigue                  //
			//**************************************************//

				player_disableFatigue = [] spawn ASF_fnc_fatigueInit;
				
			//**************************************************//

				
				
				
				
			//**************************************************//
			//               Enable Immortality                 //
			//**************************************************//

				player_enableImmortality = [] spawn ASF_fnc_immortalityInit;
				
			//**************************************************//

			
			
			
			
			//**************************************************//
			//          		   Radio                        //
			//**************************************************//
				
				//**************************************************//
				//             Disable Automatic Chatter            //
				//**************************************************//

					radio_disableChatter = [] spawn ASF_fnc_radioChatterInit;
					
				//**************************************************//
				
			//**************************************************//

		//**************************************************//




		
		//**************************************************//
		//                    Equipment                     //
		//**************************************************//

			//**************************************************//
			//             Virtual Ammobox System               //
			//**************************************************//
			
				equipment_vas = [] spawn ASF_fnc_VASInit;
				
			//**************************************************//

		//**************************************************//

	//**************************************************//





	//**************************************************//
	//                 Collect Threads                  //
	//**************************************************//
			
		waitUntil { scriptDone briefings_addBlufor };
		
		waitUntil { scriptDone briefings_addOpfor };
		
		waitUntil { scriptDone map_findLocations };
		
		waitUntil { scriptDone server_garbageCollection };
		
		waitUntil { scriptDone camera_3pv };
		
		waitUntil { scriptDone player_disableFatigue };
		
		waitUntil { scriptDone player_enableImmortality };
		
		waitUntil { scriptDone radio_disableChatter };
		
		waitUntil { scriptDone equipment_vas };
		
		ASF_InitComplete = true;

	//**************************************************//

};

